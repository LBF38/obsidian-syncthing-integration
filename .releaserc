{
	"tagFormat": "${version}",
	"plugins": [
		"@semantic-release/commit-analyzer",
		"@semantic-release/release-notes-generator",
		[
			"@semantic-release/changelog",
			{
				"changelogFile": "docs/CHANGELOG.md"
			}
		],
		[
			"@semantic-release/npm",
			{
				"npmPublish": false
			}
		],
		[
			"@semantic-release/exec",
			{
				"prepareCmd": "pnpm run version && git add manifest.json versions.json package.json docs/CHANGELOG.md && git checkout -b release/${nextRelease.version} && git commit -m \"chore(release): :bookmark: ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}\" && git push --set-upstream origin release/${nextRelease.version} && gh pr create --title \"chore(release): :bookmark: ${nextRelease.version}\" --body \"${nextRelease.notes}\" --base master --head release/${nextRelease.version} && git checkout master",
				"publishCmd": "if(git log -1 --pretty=%B | grep -q \"chore(release): :bookmark: ${nextRelease.version}\"); then echo \"creating and publishing the release ${nextRelease.version} to GitHub\"; else \"Need to merge the release PR\"; exit 1; fi"
			}
		],
		[
			"@semantic-release/github",
			{
				"assets": [
					{
						"path": "build/styles.css",
						"label": "Plugin's CSS styles file"
					},
					{
						"path": "build/main.js",
						"label": "Plugin's main JS file"
					},
					{
						"path": "build/manifest.json",
						"label": "Plugin's manifest file"
					}
				]
			}
		]
	]
}
